{
  "name": "@rematch/core",
  "version": "0.1.0-beta.6",
  "description": "A Redux Framework",
  "keywords": [
    "@rematch",
    "rematch",
    "redux",
    "rematch",
    "javascript",
    "state management"
  ],
  "homepage": "https://github.com/rematch/rematch#readme",
  "bugs": {
    "url": "git+https://github.com/rematch/rematch/issues"
  },
  "license": "ISC",
  "authors": [
    "Blair Bodnar <blairbodnar@gmail.com> (https://github.com/blairbodnar)",
    "Shawn McKay <shawn.j.mckay@gmail.com> (https://github.com/shmck)"
  ],
  "files": [
    "dist",
    "src/typings/rematch/index.d.ts"
  ],
  "main": "dist/rematch.cjs.js",
  "module": "dist/rematch.esm.js",
  "browser": "dist/rematch.umd.js",
  "types": "src/typings/rematch",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rematch/rematch.git"
  },
  "scripts": {
    "build": "rimraf build dist && tsc && NODE_ENV='production' rollup -c",
    "build:all": "bash ./scripts/build.sh",
    "dev": "tsc --watch src",
    "install:all": "tsc && bash ./scripts/setup_plugins.sh",
    "lint": "eslint ./src",
    "test": "jest"
  },
  "dependencies": {
    "redux": "^3.7.2"
  },
  "devDependencies": {
    "@types/jest": "^21.1.8",
    "@types/redux": "^3.6.0",
    "coveralls": "^3.0.0",
    "gitbook-plugin-edit-link": "^2.0.2",
    "gitbook-plugin-github": "^3.0.0",
    "gitbook-plugin-prism": "^2.3.0",
    "jest": "^21.2.1",
    "reselect": "^3.0.1",
    "rimraf": "^2.6.2",
    "rollup": "^0.52.0",
    "rollup-plugin-commonjs": "^8.2.6",
    "rollup-plugin-replace": "^2.0.0",
    "rollup-plugin-uglify": "^2.0.1",
    "ts-jest": "^21.2.3",
    "tslint": "^5.8.0",
    "typescript": "^2.6.2",
    "uglify-es": "^3.2.0"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "collectCoverage": true,
    "coverageDirectory": "coverage/",
    "coverageThreshold": {
      "global": {
        "branches": 50,
        "functions": 50,
        "lines": 50,
        "statements": 50
      }
    },
    "coveragePathIgnorePatterns": [
      "/_book/",
      "/node_modules/",
      "/plugins/react-navigation/",
      ".mock.js"
    ],
    "mapCoverage": true,
    "testPathIgnorePatterns": [
      "/_book/",
      "/lib/"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ]
  }
}
