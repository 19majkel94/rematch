{
  "name": "@rematch/core",
  "version": "0.1.0-beta.5",
  "description": "A Redux Framework",
  "keywords": [
    "@rematch",
    "redux",
    "rematch"
  ],
  "homepage": "https://github.com/rematch/rematch#readme",
  "bugs": {
    "url": "git+https://github.com/rematch/rematch/issues"
  },
  "license": "ISC",
  "contributors": [
    "Blair Bodnar <blairbodnar@gmail.com> (https://github.com/blairbodnar)",
    "Shawn McKay <shawn.j.mckay@gmail.com> (https://github.com/shmck)"
  ],
  "files": [
    "dist"
  ],
  "main": "dist/rematch.cjs.js",
  "module": "dist/rematch.esm.js",
  "browser": "dist/rematch.umd.js",
  "types": "src/typings/rematch",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rematch/rematch.git"
  },
  "scripts": {
    "build": "rimraf build dist && tsc && NODE_ENV='production' rollup -c",
    "build:all": "bash ./scripts/build.sh",
    "dev": "tsc --watch src",
    "install:all": "bash ./scripts/install.sh",
    "lint": "eslint ./src",
    "test": "jest"
  },
  "dependencies": {
    "redux": "^3.7.2"
  },
  "devDependencies": {
    "@types/redux": "^3.6.0",
    "coveralls": "^3.0.0",
    "gitbook-plugin-edit-link": "^2.0.2",
    "gitbook-plugin-github": "^3.0.0",
    "gitbook-plugin-prism": "^2.3.0",
    "jest": "^21.2.1",
    "reselect": "^3.0.1",
    "rimraf": "^2.6.2",
    "rollup": "^0.52.0",
    "rollup-plugin-commonjs": "^8.2.6",
    "rollup-plugin-replace": "^2.0.0",
    "rollup-plugin-uglify": "^2.0.1",
    "tslint": "^5.8.0",
    "typescript": "^2.6.1",
    "uglify-es": "^3.2.0",
    "webpack": "^3.8.1",
    "yargs": "^10.0.3"
  },
  "jest": {
    "collectCoverage": true,
    "coverageDirectory": "coverage/",
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "coveragePathIgnorePatterns": [
      "/_book/",
      "/node_modules/",
      "/plugins/react-navigation/"
    ],
    "testPathIgnorePatterns": [
      "/_book/"
    ]
  }
}
